{% extends '::layout/home.html.twig' %}
{% block main%}
	<div class="content-fluid">
		<div class="row">
			<div class="col-lg-12">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
				 {{ form_errors(form) }}
				  <div class="form-group">
				 	{{ form_label(form.content,"Contenu de l'opportunité",{'label_attr': {'class': 'col-lg-3 control-label'}})}}
				 	{{ form_errors(form.content)}}
				 	<div class="col-lg-4">
				 		{{ form_widget(form.content,{"attr" : {'class': 'form-control'}})}}
				 	</div>
				 </div>
				  <div id="radioset" class="form-group">
				 	{{ form_label(form.state,"État de l'opportunité",{'label_attr': {'class': 'col-lg-3 control-label'}})}}
				 	{{ form_errors(form.state)}}
				 	<div class="col-lg-4">
				 		{{ form_widget(form.state)}}
				 	</div>
				 </div>
				 <div class="form-group">
					<div class="col-lg-7" style="text-align:center">
						{{ form_widget(form.Enregistrer	, {'attr': {'class': 'btn btn-primary'}}) }}
					</div> 
				</div>	

				 {{ form_rest(form) }}

				{{ form_end(form) }}
			</div>
		</div>
	</div>


{% endblock %}

	