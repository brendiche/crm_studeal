{% extends 'base.html.twig' %}

{% block body %}
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="{{  path('bg_plateform_home') }}">Crm - Studeal</a>
			</div>
			<ul class="nav navbar-nav navbar-right">
				{% if app.user %}
				<li class="dropdown btn-primary">
					<a href="#" class="dropdown-toggle" style="color:black;text-align:center" data-toggle="dropdown" role="button" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
	                  <li><a href="{{  path('bg_plateform_user',{'id': app.user.id }) }}">Répertoire</a></li>
	                  <li class="divider"></li>
	                  <li><a href="{{ path('fos_user_profile_show') }}">Mon compte</a></li>
	                  {% if "ROLE_SUPER_ADMIN" in app.user.roles %}
	                  	<li class="divider"></li>
	                  	<li><a href="{{ path("bg_user_admin") }}">Liste utilisateur</a></li>
	                  {% endif %}
	                </ul>
				</li>
				<li class="btn-danger"><a href="{{ path('fos_user_security_logout')}}" style="color:black;text-align:center">Déconnexion</a></li>					
				{% else %}
				<li class="btn-info"><a href="{{  path('fos_user_security_login') }}" style="color:black;text-align:center">Connexion</a></li>
				<li class="btn-success"><a href="{{ path('fos_user_registration_register')}}" style="color:black;text-align:center">Inscription</a></li>
				{% endif %}
			</ul>
		</div>
	</nav>
    {% block  main %}
	{% endblock %}    	
{% endblock %}

